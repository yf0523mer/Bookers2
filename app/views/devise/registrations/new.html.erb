<div class="container">
<h2>Sign up</h2>

    <div id="error">
            <%= devise_error_messages! %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field form-group">
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, class:"name", id:"inputName" %>
    </div>
    <div class="field form-group">
        <label for="inputEmail">Email</label><br>
        <%= f.email_field :email, class:"email", id:"inputEmail" %>
    </div>
    <div class="field form-group">
        <label>Password (6 characters minimum) </label><br>
        <%= f.password_field :password, autocomplete: "off", class:"password", id:"inputPassword" %>
    </div>
    <div class="field form-group">
        <label>Password confirmation</label><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"password_confirm", id:"inputConfirmPassword" %>
    </div>
        <%= f.submit "Sign up", class:"sign_up btn btn-success field" %><br>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
