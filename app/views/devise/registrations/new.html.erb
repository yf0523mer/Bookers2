<div class="container">
<h2>Sign up</h2>

<div class="form-body">
<div id="error_explanation">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
</div>
    <div class="field form-group has-icon">
        <label for="inputEmail">Name</label><br>
        <%= f.text_field :name, autofocus: true, class:"name", id:"inputName" %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="field form-group has-icon">
        <label for="inputEmail">Email</label><br>
        <%= f.email_field :email, class:"email", id:"inputEmail" %>
        <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="field form-group has-icon">
        <label for="inputEmail">Password (6 characters minimum) </label><br>
        <%= f.password_field :password, autocomplete: "off", class:"password", id:"inputPassword" %>
        <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="field form-group has-icon">
        <label for="inputEmail">Password confirmation</label><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"password_confirm", id:"inputConfirmPassword" %>
         <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
    </div>
        <%= f.submit "Sign up", class:"sign_up btn btn-success" %>
    <% end %>
</div>

<%= render "devise/shared/links" %>
</div>
