<% if flash[:error] %>
  <p id="error"><%= flash[:error] %></p>
<% end %>
<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-3">
	<%= render 'users/list', user: @user %>
	<%= render 'books/list', book: @book %>
</div>
</div>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>title</th>
				<th>opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :image, :fill, 40, 40, fallback: "No_image.png",size: '40x40' %></td>
					<td><%= link_to book.title, book_path(book.id), class:"book_#{book.id}" %></td>
					<td><%= book.opinion %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
 </div>
