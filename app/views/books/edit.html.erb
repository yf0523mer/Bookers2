<div class="container">
  <div class="col-md-6 col-md-offset-3">
<% if flash[:error] %>
  <p id="error"><%= flash[:error] %></p>
<% end %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2 class="form-header-title">Editing book</h2>
  <div class="form-body">
  <%= form_for(@book) do |f| %>
  <div class="form-group has-icon">
  <label class="control-label" for="inputEmail">Title</label><br>
  <%= f.text_field :title, autofocus: true, class:"book_title form-control" %>
  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <div class="form-group has-icon">
  <label class="control-label" for="inputEmail">Opinion</label><br>
  <%= f.text_area :opinion, autofocus: true, class:"book_body form-control" %>
  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <%= f.submit "Update Book", class:"edit_book_#{@book.id} btn btn-primary col-xs-12" %>
  <% end %>
  <%= link_to "Show", book_path(@book.id), class:"book_#{@book.id}"%> | <%= link_to "Back", book_path, class:"back"%>
  </div>
  </div>
</div>