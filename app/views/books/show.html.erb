<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<div class="col-xs-3">
	<%= render 'users/list', user: @user %>
	<%= render 'books/list', book: @book_new %>
</div>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table table-hover table-inverse">
		<tbody>
			<tr>
				<td><%= attachment_image_tag @user, :image, :fill, 40, 40, fallback:"No_image.png",size: '40x40' %><br><%= @user.name %></td>
				<td><%= @book.title %></td>
				<td><%= @book.opinion %></td>
				<% if @user.id == current_user.id %>
       			<td><%= link_to "Edit", edit_book_path(@book.id), class:"edit_book_#{@book.id} btn-sm btn-success" %></td>
       			<td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"destroy_book_#{@book.id} btn-sm btn-danger", "data-confirm" => "Are you sureï¼Ÿ" %></td>
			    <% end %>
			</tr>
		</tbody>
	</table>
</div>