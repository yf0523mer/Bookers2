<% if flash[:error] %>
  <p id="error"><%= flash[:error] %></p>
<% end %>
<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<div class="col-xs-3">
	<%= render 'users/list', user: @user %>
	<%= render 'books/list', book: @book %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @user.books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag @user, :image, :fill, 40, 40, fallback:"No_image.png",size: '40x40' %></td>
				<td><%= link_to book.title, book_path(book.id), class:"book_#{book.id}" %></td>
				<td><%= book.opinion %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
