<div class="col-xs-3">
	<%= render 'users/list', user: @user %>
	<%= render 'books/list', book: @book %>
</div>
<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :image, :fill, 40, 40, fallback:"No_image.png",size:"40x40" %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user.id), class:"user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
